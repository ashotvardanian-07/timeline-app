{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,

    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}